generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userID Int @default(autoincrement()) @id
  name String
  email String @unique
  password String
  icon String?
  permission String @default("ALUNO")
  Classes Classes[]

  @@map("User")
}

model Classes{
  id Int @default(autoincrement()) @id
  userID Int[]
  User User @relation(fields: [userID], references: [userID], onDelete: NoAction)
}
